<?xml version="1.0" encoding="UTF-8"?>

<!-- IMPORTATIONS -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- 
    1. ROOT : On utilise StackPane comme dans login.fxml pour centrer la carte.
    2. CSS : On lie la feuille de style.
-->
<StackPane prefHeight="550.0" prefWidth="400.0" stylesheets="@../../css/style.css" 
           xmlns="http://javafx.com/javafx/21" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.sport.controller.common.RegisterController">

    <!-- CARTE BLANCHE CENTRÉE (styleClass="card-pane") -->
    <VBox alignment="CENTER" maxWidth="350.0" spacing="15.0" styleClass="card-pane">

        <!-- En-tête harmonisé -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="INSCRIPTION" styleClass="title-label"/>
            <Label text="Créez votre compte" styleClass="subtitle-label"/>
        </VBox>

        <!-- Champs de saisie -->
        <VBox spacing="10">
            <TextField fx:id="txtNom" promptText="Nom" maxWidth="Infinity"/>
            <TextField fx:id="txtPrenom" promptText="Prénom" maxWidth="Infinity"/>
            <TextField fx:id="txtEmail" promptText="Email" maxWidth="Infinity"/>
            <PasswordField fx:id="txtPassword" promptText="Mot de passe" maxWidth="Infinity"/>
        </VBox>

        <!-- Choix du Rôle -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="Je suis un :" textFill="#7f8c8d"/>
            <HBox alignment="CENTER" spacing="20.0">
                <fx:define>
                    <ToggleGroup fx:id="roleGroup"/>
                </fx:define>

                <RadioButton fx:id="radioMembre" text="Membre" toggleGroup="$roleGroup" selected="true" styleClass="radio-button"/>
                <RadioButton fx:id="radioCoach" text="Coach" toggleGroup="$roleGroup" styleClass="radio-button"/>
            </HBox>
        </VBox>

        <!-- Bouton S'inscrire (styleClass="button-primary") -->
        <Button text="S'INSCRIRE" onAction="#handleInscription" 
                maxWidth="Infinity" styleClass="button-primary"/>
            
        <!-- Lien Retour (styleClass="link-button") -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="Déjà un compte ?" textFill="#95a5a6"/>
            <Button text="Retour Connexion" onAction="#allerVersLogin" styleClass="link-button"/>
        </VBox>
    
        <Label fx:id="lblMessage" textFill="#e74c3c"/>

    </VBox>
</StackPane>