<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.coach.CoachDashboardController"
      spacing="20"
      style="-fx-background-color: #f4f6f7; -fx-padding: 20;"
      stylesheets="@style.css">

    <Label text="Tableau de bord" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- Cartes statistiques -->
    <HBox spacing="20">
        <VBox styleClass="dashboard-card">
            <Label text="Séances aujourd'hui" styleClass="card-title"/>
            <Label fx:id="lblSeances" text="0" styleClass="card-value"/>
        </VBox>

        <VBox styleClass="dashboard-card">
            <Label text="Membres suivis" styleClass="card-title"/>
            <Label fx:id="lblMembres" text="0" styleClass="card-value"/>
        </VBox>

        <VBox styleClass="dashboard-card">
            <Label text="Prochaine séance" styleClass="card-title"/>
            <Label fx:id="lblProchaine" text="Aucune" styleClass="card-value"/>
        </VBox>
    </HBox>

    <!-- Graphique -->
    <VBox spacing="10" styleClass="dashboard-card">
        <Label text="Séances par jour (7 derniers jours)" styleClass="card-title"/>
        <BarChart fx:id="barChart" title="Séances" prefHeight="250" prefWidth="600">
            <xAxis>
                <CategoryAxis label="Jour"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Nombre de séances"/>
            </yAxis>
        </BarChart>
    </VBox>

    <!-- Notifications -->
    <VBox spacing="10" styleClass="dashboard-card">
        <Label text="Notifications (prochaines séances dans l'heure)" styleClass="card-title"/>
        <VBox fx:id="notificationsBox" spacing="5"/>
    </VBox>

</VBox>
