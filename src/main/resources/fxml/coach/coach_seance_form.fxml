<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.coach.CoachSeanceFormController"
      spacing="15"
      style="-fx-padding: 25; -fx-background-color: #ffffff; -fx-border-color: #dcdcdc; -fx-border-radius: 8; -fx-background-radius: 8;"
      stylesheets="@style.css">

    <!-- Titre -->
    <Label text="Séance" styleClass="title-label"/>

    <!-- Nom -->
    <VBox spacing="5">
        <Label text="Nom de la séance:"/>
        <TextField fx:id="txtNom" promptText="Entrez le nom de la séance"/>
    </VBox>

    <!-- Type de séance -->
    <VBox spacing="5">
        <Label text="Type de séance:"/>
        <ComboBox fx:id="cbType"/>
    </VBox>

    <!-- Type de cours -->
    <VBox spacing="5">
        <Label text="Type de cours:"/>
        <ComboBox fx:id="cbTypeCours"/>
    </VBox>

    <!-- Salle -->
    <VBox spacing="5">
        <Label text="Salle disponible:"/>
        <ComboBox fx:id="cbSalle"/>
    </VBox>

    <!-- Date & Heure -->
    <VBox spacing="5">
        <Label text="Date et Heure:"/>
        <HBox spacing="5">
            <DatePicker fx:id="dpDate"/>
            <Spinner fx:id="spHeure" prefWidth="80"/>
            <Spinner fx:id="spMinute" prefWidth="80"/>
        </HBox>
    </VBox>

    <!-- Durée -->
    <VBox spacing="5">
        <Label text="Durée (minutes):"/>
        <Spinner fx:id="spDuree" prefWidth="100"/>
    </VBox>

    <!-- Capacité max (si Collective) -->
    <VBox spacing="5">
        <Label text="Capacité max (collective uniquement):"/>
        <Spinner fx:id="spMaxMembres" prefWidth="120"/>
    </VBox>

    <!-- Boutons -->
    <HBox spacing="10" style="-fx-alignment: center;">
        <Button fx:id="btnSave" text="Enregistrer" styleClass="button-primary"/>
        <Button fx:id="btnCancel" text="Annuler" styleClass="button-secondary"/>
    </HBox>

</VBox>
