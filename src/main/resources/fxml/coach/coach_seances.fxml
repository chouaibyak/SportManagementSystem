<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.coach.CoachSeancesController"
      spacing="20"
      style="-fx-background-color: #f4f6f7; -fx-padding: 20;"
      stylesheets="@style.css">

    <!-- Titre -->
    <Label text="Gestion des Séances" styleClass="title-label"/>

    <!-- Boutons d'action -->
    <HBox spacing="10">
        <Button text="Ajouter Séance" fx:id="btnAddSeance" styleClass="button-primary"/>
        <Button text="Modifier Séance" fx:id="btnEditSeance" styleClass="button-secondary"/>
        <Button text="Supprimer Séance" fx:id="btnDeleteSeance" styleClass="button-secondary"/>
        <Button text="Refresh" fx:id="btnRefresh" styleClass="button-primary"/>
    </HBox>

    <!-- Tableau des séances -->
    <TableView fx:id="tableSeances" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Nom" fx:id="colNom" prefWidth="150"/>
            <TableColumn text="Type" fx:id="colType" prefWidth="120"/>
            <TableColumn text="Date &amp; Heure" fx:id="colDateHeure" prefWidth="180"/>
            <TableColumn text="Durée (min)" fx:id="colDuree" prefWidth="100"/>
            <TableColumn text="Membres inscrits" fx:id="colMembres" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>
