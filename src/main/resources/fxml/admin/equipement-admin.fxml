<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.admin.EquipementAdminController"
      spacing="15">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Gestion des Équipements"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="equipementTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="190"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="190"/>
            <TableColumn fx:id="etatColumn" text="État" prefWidth="190"/>
            <TableColumn fx:id="dateColumn" text="Date Achat" prefWidth="195"/>
            <TableColumn fx:id="colModify" text="Modifier" prefWidth="85"/>
            <TableColumn fx:id="colDelete" text="Supprimer" prefWidth="85"/>
        </columns>
    </TableView>

    <Button fx:id="btnAddEquipement" text="Ajouter Équipement"
            style="-fx-font-size: 14px;" onAction="#openAddEquipementForm"/>
</VBox>
