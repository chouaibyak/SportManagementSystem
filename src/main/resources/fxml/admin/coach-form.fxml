<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sport.controller.admin.CoachFormController"
            prefWidth="400" prefHeight="350">

    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <Label text="Coach Form" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="40"/>
                    <ColumnConstraints percentWidth="60"/>
                </columnConstraints>

                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelephone" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Adresse:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAdresse" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Save" fx:id="btnSave" onAction="#onSave"/>
                <Button text="Cancel" onAction="#onCancel"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
