<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sport.controller.admin.EquipementFormController"
            prefWidth="350" prefHeight="250">

    <children>
        <VBox spacing="12" alignment="CENTER"
              AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <Label text="Equipement Form"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">

                <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbType" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Ã‰tat:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbEtat" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date d'achat:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpDateAchat" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Save" onAction="#onSave"/>
                <Button text="Cancel" onAction="#onCancel"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
