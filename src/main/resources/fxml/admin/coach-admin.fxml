<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.admin.CoachAdminController">

    <Label text="Coach Management" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="coachTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="120"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="120"/>
            <TableColumn fx:id="colSpecialites" text="Spécialités" prefWidth="180"/>
            <TableColumn fx:id="colModify" text="Modifier" prefWidth="60"/>
            <TableColumn fx:id="colDelete" text="Supprimer" prefWidth="60"/>
        </columns>
    </TableView>

    <Button fx:id="btnAddCoach" text="Ajouter un Coach" style="-fx-font-size: 14px; -fx-padding: 8 15 8 15;"/>

</VBox>
