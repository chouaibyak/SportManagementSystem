<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="10"  xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.admin.CoachAdminController">
    <padding>
        <Insets top="10" right="25" bottom="10" left="30"/>
    </padding>

    <Label text="Coach Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="coachTable">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="130"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="130"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="160"/>
            <TableColumn fx:id="colSpecialites" text="Spécialités" prefWidth="180"/>
            <TableColumn fx:id="colModify" text="Modifier" prefWidth="105"/>
            <TableColumn fx:id="colDelete" text="Supprimer" prefWidth="105"/>
        </columns>
    </TableView>
                                                                          
    <Button fx:id="btnAddCoach" text="Ajouter un Coach" style="-fx-font-size: 14px; "/>

</VBox>
