<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sport.controller.admin.RapportAdminController">

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <Label text="Rapports"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <HBox spacing="10">
                <Label text="Type :" />
                <ComboBox fx:id="typeComboBox" prefHeight="15" prefWidth="200"/>

                <Label text="Date début :" />
                <DatePicker fx:id="dateDebutPicker" prefHeight="10" prefWidth="200"/>

                <Label text="Date fin :" />
                <DatePicker fx:id="dateFinPicker" prefHeight="10" prefWidth="200"/>

                <Button text="Générer"
                        onAction="#handleGenererRapport"/>
            </HBox>

            <TableView fx:id="rapportTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="180"/>
                    <TableColumn fx:id="dateDebutColumn" text="Début" prefWidth="120"/>
                    <TableColumn fx:id="dateFinColumn" text="Fin" prefWidth="120"/>
                    <TableColumn fx:id="donneesColumn" text="Données" prefWidth="400"/>
                </columns>
            </TableView>

            <Button text="Supprimer le rapport sélectionné"
                    onAction="#handleSupprimerRapport"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>

        </VBox>
    </center>

</BorderPane>
