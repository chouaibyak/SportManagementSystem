<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sport.controller.admin.MemberFormController"
      spacing="10" >
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

    <Label text="Ajouter / Modifier Membre" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfNom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="tfPrenom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfTelephone" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Objectif:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbObjectif" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        
        <Label text="Préférence:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbPreference" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button fx:id="btnSave" text="Enregistrer"/>
        <Button fx:id="btnCancel" text="Annuler"/>
    </HBox>

</VBox>
