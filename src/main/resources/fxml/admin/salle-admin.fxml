           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    
    <!-- ================= TABLE ================= -->

    <TableView fx:id="salleTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
