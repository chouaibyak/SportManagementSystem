<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<!-- fx:controller fait le lien avec ta classe Java -->
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sport.controller.AccueilController">

    <!-- fx:id="messageBienvenue" correspond à la variable Java -->
    <Label fx:id="messageBienvenue" text="Texte par défaut" />

    <!-- fx:id="champNom" correspond à la variable Java -->
    <TextField fx:id="champNom" promptText="Entrez votre nom" maxWidth="200" />

    <!-- onAction="#onButtonClick" appelle la méthode Java quand on clique -->
    <Button text="Valider" onAction="#onButtonClick"/>
    
</VBox>